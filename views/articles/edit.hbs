<h1>Edit Article</h1>

<form action='/articles/1000?_method=PUT' method='POST'>
    <label for='title'>Title: </label>
    <input name='title' type='text' value='{{title}}' required>
    <label for='author'>Author: </label>
    <input name='author' type='text' value='{{author}}' required>
    <br><br>
    <textarea name='body' rows="10" cols="60" required>{{body}}</textarea>
    <br><br>
    <input type='hidden' name='urltitle' value={{urltitle}}>
    <input type='submit' value='Submit'>
</form>